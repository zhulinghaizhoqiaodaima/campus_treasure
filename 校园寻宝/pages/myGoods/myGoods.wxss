page {
  position: relative;
}
/* 列表内容 */
.list .txt {
  flex-grow: 1;
  width: 100%;
  margin-left: -150rpx;
}
/* 删除按钮 */
.list .del {
  flex-grow: 0;
  width: 150rpx;
  height: 220rpx;
  color: #fff;
  background-color: #fe3e2f;
  line-height: 220rpx;
  text-align: center;
}

.list .txt, .list .del {
  transform: translateX(150rpx);
  transition: all 0.4s;
}
.touch-move-active .txt,.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

