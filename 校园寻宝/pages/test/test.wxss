}

.btn-login {
  padding: 8%;
  background: linear-gradient(91deg,#f1eefc,#9dc6ff 70%,#a5bcff);
}

.tuichu {
  color: gray;
  padding: 20rpx;
}

.userinfo-avatar {
  border-radius: 158rpx;
